{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Sign in</h1>

    {% if error %}
        <div style="color: red; margin-bottom: 1rem;">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div style="margin-bottom: 1rem;">
            <label for="inputUsername">Username</label>
            <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" autocomplete="username" required autofocus style="display: block; width: 100%; max-width: 300px; padding: 0.5rem; margin-top: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label for="inputPassword">Password</label>
            <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required style="display: block; width: 100%; max-width: 300px; padding: 0.5rem; margin-top: 0.5rem;">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" style="padding: 0.5rem 1.5rem; background-color: #007bff; color: white; border: none; cursor: pointer; border-radius: 4px;">
            Sign in
        </button>
    </form>

    <div style="margin-top: 2rem; color: #666; font-size: 0.9rem;">
        <p><strong>Test credentials:</strong></p>
        <ul>
            <li>Username: <code>admin</code>, Password: <code>123</code> (Admin access)</li>
            <li>Username: <code>user</code>, Password: <code>123</code> (User access)</li>
        </ul>
    </div>
</div>
{% endblock %}

