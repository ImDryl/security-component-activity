{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Welcome to the Dashboard!</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <p class="admin">You are logged in as Admin. You have full access.</p>
    {% elseif is_granted('ROLE_USER') %}
        <p class="user">You are logged in as Regular User. Limited access granted.</p>
    {% endif %}

    
</div>
{% endblock %}
